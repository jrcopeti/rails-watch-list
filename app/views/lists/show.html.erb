<h1><%= @list.name %></h1>
<br>
<h2>My bookmarks</h2>
<% @list.bookmarks.each do |bookmark| %>
  <h3><%= bookmark.movie.title %></h3>
  <p><%= bookmark.movie.overview %></p>
  <br>
  <p>Comment:</p>
  <p><%= bookmark.comment %></p>
    <%= link_to "delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
<br>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
  <%= f.association :movie, prompt: "Select a movie" %>
  <%= f.submit class: "btn btn-flat" %>
<% end %>

<%= link_to "Back to my lists", lists_path %>
